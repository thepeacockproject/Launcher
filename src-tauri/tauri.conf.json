{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build:frontend",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "Peacock Launcher"
    },
    "tauri": {
        "allowlist": {
            "all": false
        },
        "bundle": {
            "active": true,
            "category": "Utility",
            "copyright": "Copyright (c) 2022 The Peacock Project",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "org.thepeacockproject.launcher",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": "The Peacock Project",
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "A launcher for The Peacock Project.",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "webviewInstallMode": {
                    "type": "embedBootstrapper"
                }
            }
        },
        "security": {
            "csp": "default-src 'self'"
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": false,
                "title": "Peacock Launcher",
                "width": 800
            }
        ]
    }
}
